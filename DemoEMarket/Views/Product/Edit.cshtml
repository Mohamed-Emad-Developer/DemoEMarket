@model DemoEMarket.Models.viewModel.ProductCategoryVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h1>Edit</h1>
@ViewBag.ErrorMessage
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input hidden asp-for="Product.Id" />
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categories"></label>
        <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-control">
            @*<option selected>--Select Product Name--</option>*@
        </select>
        <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.AvailableProducts"></label>
        <input asp-for="Product.AvailableProducts" data-product-price="@Model.Product.AvailableProducts" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.AvailableProducts"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Image"></label>
        <input asp-for="Product.Image" name="Product.Image" data-product-price="@Model.Product.Price" type="file" class="form-control" />
        <img src="~/images/uploads/products/@Model.Product.ImageName" alt="Alternate Text" />
        <span class="text-danger" asp-validation-for="Product.Image"></span>
    </div>
    <button type="submit" class="btn btn-success">add</button>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}