@model IEnumerable<DemoEMarket.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<style>
    a.btn {
        margin-bottom: 20px;
    }
    table tr td img{
        width: 150px;
    }
</style>
<h1>All Products</h1>
<a asp-action="Create" class="btn btn-primary">Add new product</a>
<a asp-action="Create" asp-controller="Item" class="btn btn-primary">Add Items</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Image</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Changes</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var product in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@product.Name</td>
                    <td>
                    <img class="img-thumbnail" src="~/images/uploads/products/@product.ImageName" alt="Alternate Text" />
                    </td>
                    <td>@product.Category.Title</td>
                    <td>EGP @product.Price</td>
                    <td>@product.AvailableProducts</td>
                    @*<td>@product.Pieces</td>*@
                    <td>
                        <a class="btn btn-success" asp-route-id="@product.Id" asp-action="Edit">Edit</a>
                        <a class="btn btn-primary" asp-route-id="@product.Id" asp-action="Details">Details</a>
                        <a class="btn btn-danger" asp-route-id="@product.Id" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="text-center" colspan="7">No products added yet!!</td>
            </tr>
        }
    </tbody>
</table>